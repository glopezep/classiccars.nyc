.App-container
  position relative
body
  font-size 16px
  background black

.Header
  position relative
  z-index 3
  &-title
    text-transform uppercase
    font-family serif


.Main
  color white
  padding 1em
  &-about
    font-family serif

    div.Main-left, div.Main-right
      p
        margin-top 5em
    h4
      margin-top 2em

  &-container
    min-height 100vh
    transition all 300ms ease-out

    &.transition
      transform: translateX(100px);
      opacity: 0;


  .container
    position relative
    z-index 3

  &-layer
    position absolute
    left 0
    top 0
    right 0
    bottom 0
    background-color black
    opacity .6
    z-index 2

    &Body
      position absolute
      top 0
      right 0
      bottom 0
      left 0
      background url('img/1.jpg') no-repeat center center
      background-size cover
      transition all 1s ease
      z-index 1

  &-title
    margin 0
    text-transform uppercase
    font-family serif

html, body
  height 100%
  margin 0
  padding 0
#map
  height 400px

#sidenav-overlay
  z-index 2 !important
